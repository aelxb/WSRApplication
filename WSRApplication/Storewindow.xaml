<Window x:Class="WSRApplication.Storewindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WSRApplication"
        mc:Ignorable="d"
        Title="Storewindow" Height="1080" Width="1920">
    <Grid>
        <DataGrid x:Name="stores" Margin="10,10,10,140"/>
        <Button x:Name="delete" Content="Удалить" Margin="0, 920, 1600,0" Width="200" Height="100" FontSize="50" Click="delete_Click" />
        <Button x:Name="add" Content="Добавить" Margin="0, 920, 1100,0" Width="250" Height="100" FontSize="50" Click="add_Click"/>
    </Grid>
</Window>
